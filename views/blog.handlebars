{{!-- Post --}}
<div class="container">
  <div class="row">
    <div class="card">
      <div class="card-heading">
        <div class="card-title">
          <h3>{{plainObjectPostItem.title}}</h3>
        </div>
        <div class="card-author">
          <p>Posted by {{plainObjectPostItem.user.username}} on {{format_date plainObjectPostItem.createdAt}}</p>
        </div>
      </div>
      <div class="card-body">
        <p>{{plainObjectPostItem.body}}</p>
      </div>
    </div>
  </div>
</div>
{{!-- Comments Section --}}
<div class="container">
  <div class="row">
    <div class="comment-header">
      <div class="comment-title">
        <h3>Comments</h3>
        <a href="#postacomment">Post a Comment</a>
      </div>
    </div>
    {{#each plainObjectComments}}
    <div class="comments">
      <div class="comment-body">
        <p>{{comment}}</p>
      </div>
      <div class="comment-user">
        <p>- {{user.username}}, {{format_date createdAt}}</p>
      </div>
    </div>
    {{/each}}
  </div>
</div>
{{!-- Post a Comment --}}
<div class="container">
  <div class="row">
    <div id="post-a-comment">
      <h3>Post a Comment</h3>
    </div>
    <form class="form" id="comment-form">
        <div class="form-group">
          <label for="comment-field">
            Comment
          </label>
          <input type="text" class="form-input" id="comment-field">
        </div>
        <div class="form-group">
          <button class="button" type="submit" id="comment-submit">Submit</button>
        </div>
      </form>
  </div>
</div>