<div class="container">
  <div class="row">
    <div id="login">
      <form class="form" id="signup-form">
        <div class="form-group">
          <label for="username">
            Username
          </label>
          <input type="text" class="form-input" id="username-signup">
          <label for="password">
            Password
          </label>
          <input type="password" class="form-input" id="password-signup">
        </div>
        <div class="form-group">
          <button class="button-go" type="submit" id="signup-submit">Sign Up</button>
        </div>
      </form>
      <a href="/login/signup">Login instead</a>
    </div>
  </div>
</div>

<script src="../js/signup.js"></script>