<div class="container">
  <div class="row">
    <div id="login">
      <form class="form" id="login-form">
        <div class="form-group">
          <label for="username-login">
            Username
          </label>
          <input type="text" class="form-input" id="username-login">
          <label for="password-login">
            Password
          </label>
          <input type="password" class="form-input" id="password-login">
        </div>
        <div class="form-group">
          <button class="button" type="submit" id="login-submit">GO!</button>
        </div>
      </form>
      <a href="/login/signup">Sign up instead</a>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>