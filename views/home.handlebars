<div class="container">
  <div class="row" id="dashboard-posts">
    {{#each plainObjectPostData}}
    <a href="/blog/{{id}}">
      <div class="card">
        <div class="card-heading">
          <div class="card-title">
            <h3>{{title}}</h3>
          </div>
          <div class="card-author">
            <p>Posted by {{user.username}} on {{format_date createdAt}}</p>
          </div>
        </div>
        <div class="card-body">
          <p>{{body}}</p>
        </div>
      </div>
    </a>
    {{/each}}
  </div>
</div>